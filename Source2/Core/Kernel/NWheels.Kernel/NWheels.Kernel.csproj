<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Description>
      This package is part of NWheels, a super productive full-stack development platform.
      This is the only non-optional package when using NWheels.
      The package contributes: DI/feature loaders programming model, execution path tracking, authorization mechanism.
    </Description>
  </PropertyGroup>

  <PropertyGroup>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <RootNamespace>NWheels.Kernel</RootNamespace>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)'=='Debug'">
    <DebugType>Full</DebugType>
    <DebugSymbols>True</DebugSymbols>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Autofac" Version="4.6.1" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Api\Authorization\" />
    <Folder Include="Runtime\Authorization\" />
    <Folder Include="Runtime\Execution\" />
  </ItemGroup>

</Project>
